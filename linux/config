[mbox.pubin]
# Mailing lists are hosted somewhere. A ML host may host multiple lists.
# To define lists of a host, those lists need to be defined within the list of
# lists of a ML host:
#
# "hoster" = ["listname1",  "listname2", ...]
#
# Shards (0.git, 1.git, ...) of public inboxes MUST be located under
# resources/project_name/resources/mbox/pubin/hoster/listname1/ . PaStA
# will then try to automatically find shards beginning from 0.

